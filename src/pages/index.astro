---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import ExperiencesPro from "../components/ExperiencesPro.astro";
import MyStack from "../components/MyStack.astro";
import Now from "../components/Now.astro";
import Projects from "../components/Projects.astro";
---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Amettler Thierry - DevOps Freelance"
  description="Hey, je suis Thierry Amettler, un ingénieur DevOps / SysOps spécialisé sur les infrastructures d'outillage passionné d'open source."
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-3  md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <Projects />
    <ExperiencesPro />
    <MyStack />
    <ContactsCard />
    <Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
      <p class="text-xs">
        © 2024 · Crafted with bento-portfolio using <a
          href="https://astro.build/"
          target="_blank"
          class="text-red-500">Astro</a
        >. 
      </p>
    </Card>
    <Now />
  </main>
</Layout>

